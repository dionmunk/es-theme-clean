<theme>

  <formatVersion>4</formatVersion>

  <feature supported="carousel">
    <view name="system">
      <carousel name="systemcarousel">
        <type>horizontal</type>
        <origin>0.5 0.5</origin>
        <pos>0.5 0.34</pos>
        <size>1 0.3</size>
        <color>000000</color>
        <logoSize>0.6 0.08</logoSize>
        <logoScale>1.75</logoScale>
        <maxLogoCount>1</maxLogoCount>
      </carousel>
      <text name="logoText">
        <origin>0.5 0.5</origin>
        <pos>0.5 0.305</pos>
        <fontSize>0.17</fontSize>
        <fontPath>./../fonts/opensans.ttf</fontPath>
        <forceUppercase>1</forceUppercase>
        <color>ffffff</color>
      </text>
      <image name="seperator" extra="true">
        <path>./../images/space.png</path>
        <origin>0.5 0.5</origin>
        <pos>0.5 0.50</pos>
        <size>1 0.005</size>
        <color>ffffff</color>
      </image>
      <text name="systemInfo">
        <backgroundColor>000000</backgroundColor>
        <pos>0 0.59</pos>
        <color>ffffff</color>
        <fontPath>./../fonts/opensans.ttf</fontPath>
        <fontSize>0.055</fontSize>
      </text>
    </view>
  </feature>

  <view name="system, basic, detailed, video">
    <image name="background_all" extra="true">
      <path>./../images/space.png</path>
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 1</size>
      <color>000000</color>
    </image>
    <helpsystem name="help">
      <pos>1 1</pos>
    </helpsystem>
  </view>

  <view name="basic, detailed, video">
    <image name="logo">
      <origin>0.5 0</origin>
      <pos>0.5 0.043</pos>
      <maxSize>1 0.12</maxSize>
    </image>
    <text name="logoText">
      <fontPath>./../fonts/opensans.ttf</fontPath>
      <origin>0.5 0</origin>
      <pos>0.5 0.025</pos>
      <fontSize>0.055</fontSize>
      <forceUppercase>1</forceUppercase>
    </text>
    <image name="logo_seperator" extra="true">
      <path>./../images/space.png</path>
      <origin>0.5 0.5</origin>
      <pos>0.5 0.22</pos>
      <size>1 0.005</size>
      <color>ffffff</color>
    </image>
  </view>

  <view name="basic">
    <textlist name="gamelist">
      <selectorColor>ffffff</selectorColor>
      <selectedColor>000000</selectedColor>
      <primaryColor>ffffff</primaryColor>
      <secondaryColor>666666</secondaryColor>
      <fontPath>./../fonts/opensans.ttf</fontPath>
      <pos>0 0.275</pos>
      <size>1 0.68</size>
      <fontSize>0.045</fontSize>
      <lineSpacing>1.5</lineSpacing>
      <horizontalMargin>0.015</horizontalMargin>
      <forceUppercase>0</forceUppercase>
    </textlist>
  </view>

  <view name="detailed">
    <image name="md_image">
      <origin>0.5 0.5</origin>
      <pos>0.16 0.82</pos>
      <maxSize>0.26 0.26</maxSize>
    </image>
  </view>

  <feature supported="video">
    <view name="video">
      <video name="md_video">
        <origin>0.5 0.5</origin>
        <pos>0.16 0.82</pos>
        <maxSize>0.26 0.26</maxSize>
        <delay>2</delay>
        <showSnapshotNoVideo>true</showSnapshotNoVideo>
        <showSnapshotDelay>true</showSnapshotDelay>
      </video>
    </view>
  </feature>

  <view name="detailed, video">
    <textlist name="gamelist">
      <selectorColor>ffffff</selectorColor>
      <selectedColor>000000</selectedColor>
      <primaryColor>ffffff</primaryColor>
      <secondaryColor>cccccc</secondaryColor>
      <fontPath>./../fonts/opensans.ttf</fontPath>
      <pos>0 0.275</pos>
      <size>1 0.3</size>
      <alignment>center</alignment>
      <fontSize>0.045</fontSize>
      <lineSpacing>1.5</lineSpacing>
      <horizontalMargin>0.015</horizontalMargin>
      <forceUppercase>1</forceUppercase>
    </textlist>

    <image name="metadata_seperator" extra="true">
      <path>./../images/space.png</path>
      <origin>0.5 0.5</origin>
      <pos>0.5 0.64</pos>
      <size>1 0.005</size>
      <color>ffffff</color>
    </image>

    <text name="md_description, md_genre, md_lastplayed, md_releasedate">
      <color>ffffff</color>
      <forceUppercase>1</forceUppercase>
      <fontPath>./../fonts/opensans.ttf</fontPath>
      <fontSize>0.045</fontSize>
    </text>

    <rating name="md_rating">
      <pos>0.35 0.6925</pos>
      <size>0.20 0.05</size>
      <filledPath>./../images/star_filled.svg</filledPath>
      <unfilledPath>./../images/star_unfilled.svg</unfilledPath>
    </rating>

    <text name="md_genre">
      <pos>0.35 0.755</pos>
      <size>0.325 0.05</size>
    </text>

    <datetime name="md_releasedate">
      <pos>0.73 0.69</pos>
      <size>0 0.05</size>
    </datetime>

    <datetime name="md_lastplayed">
      <pos>0.73 0.75</pos>
      <size>0 0.05</size>
    </datetime>

    <text name="md_description">
      <pos>0.35 0.83</pos>
      <size>0.62 0.12</size>
      <fontSize>0.045</fontSize>
    </text>

    <text name="md_favorite, md_hidden, md_kidgame, md_lbl_developer, md_lbl_genre, md_lbl_lastplayed, md_lbl_playcount, md_lbl_players, md_lbl_publisher, md_lbl_rating, md_lbl_releasedate">
      <pos>1 1</pos>
    </text>
  </view>
</theme>
